# Supabase Configuration
# Get these values from your Supabase project settings
# https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google OAuth Configuration (Production Only)
# For local development, Google Auth uses mock authentication
# Configure these in your Supabase Dashboard > Authentication > Providers
# Google Client ID and Secret are set in Supabase Dashboard, not environment variables
# See docs/AUTHENTICATION.md for complete setup instructions

# REQUIRED for Google OAuth in production: Set this to your deployed site URL.
# This URL MUST also be added to Supabase Dashboard → Authentication →
# URL Configuration → Redirect URLs, and set as the Site URL there too.
# Without this, OAuth redirects fall back to Supabase's configured Site URL
# (which defaults to http://localhost:5173 and causes the "redirects to localhost" bug).
VITE_SITE_URL=https://woolwitch.co.uk

# Stripe Configuration
# Get these from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# PayPal Configuration
# Get these from PayPal Developer Dashboard
VITE_PAYPAL_CLIENT_ID_SANDBOX=your_paypal_sandbox_client_id_here
VITE_PAYPAL_CLIENT_ID_PRODUCTION=your_paypal_production_client_id_here

# Application Environment
# Set to 'production' in production, omit or set to 'development' for local dev
VITE_APP_ENV=development

# Supabase Edge Function Configuration (for create-payment-intent function)
# ALLOWED_ORIGINS - Comma-separated list of allowed CORS origins for production
# Example: ALLOWED_ORIGINS=https://woolwitch.co.uk,https://www.woolwitch.co.uk
# If not set, defaults to localhost origins for development
ALLOWED_ORIGINS=http://localhost:5173

# ENVIRONMENT - Set to 'production' to disable detailed error logging
ENVIRONMENT=development

# Anthropic API Key for Claude AI (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Chat Feature (set to 'true' to enable chat page)
VITE_ENABLE_AI_CHAT=true

# MCP Server URL for AI Chat
VITE_MCP_SERVER_URL=http://localhost:3333
